{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2019"],
    "module": "commonjs",
    "removeComments": false,
    "noEmit": false,
    "sourceMap": true,
    "allowImportingTsExtensions": false,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2018",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
